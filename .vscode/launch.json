    "version": "0.2.0",
    "configurations": [

      {
        "name": "2a. PyTest (ALL)",
        "type": "debugpy",
        "request": "launch",
        "stopOnEntry": false,
        "module": "pytest",
        "cwd": "${workspaceRoot}",
        "env": {},
        "envFile": "${workspaceRoot}/.env",
        "console": "internalConsole",
        "internalConsoleOptions": "openOnSessionStart",
        "justMyCode": false
      },

      {
        "name": "2b. PyTest (tests/test_script.py)",
        "type": "debugpy",
        "request": "launch",
        "stopOnEntry": false,
        "module": "pytest",
        "cwd": "${workspaceRoot}",
        "env": {},
        "args": ["tests/test_script.py"],
        "envFile": "${workspaceRoot}/.env",
        "console": "internalConsole",
        "internalConsoleOptions": "openOnSessionStart",
        "justMyCode": false
      },

        
    ]
  }