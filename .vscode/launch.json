  "version": "0.2.0",
  "configurations": [
    {
      "name": "1a Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },

    // PYTEST launch configs

    {
      "name": "2a. Debug Current PyTest file",
      "type": "debugpy",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "cwd": "${workspaceRoot}",
      "args": [
        "--headed",
        "${file}"
      ],
      "envFile": "${workspaceRoot}/.env",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },

